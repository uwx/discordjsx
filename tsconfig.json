{
    "include": [
        "src/**/*",
    ],
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "jsx": "react-jsx",
        "lib": ["ESNext"],
        "types": ["pure-react-types"],
        "baseUrl": ".",
        "esModuleInterop": true,
        "declaration": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "outDir": "./dist",
    }
}
